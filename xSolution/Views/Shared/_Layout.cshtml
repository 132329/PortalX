<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - PortalX</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="stylesheet" type="text/css" media="screen" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/lib/designX.css">
    
    @RenderSection("Styles", required: false)

</head>
<body>
    <div class="fluid-container">
        <nav class="navbar navbar-expand-lg sticky-top navbar-light bg-light ">
            <a class="navbar-brand" href="#">
                <img src="~/img/portalX-brand-logo.png" width="160px" height="40px" alt="PortalX-Logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav my-2 my-sm-0">
                    <a class="nav-item nav-link btn btn-primary my-2 my-sm-0" href="#" role="button">Get Started</a>
                    <a class="nav-item nav-link">Log In</a>
                </div>
            </div>
        </nav>
    </div>

    <div class="container">
        @RenderBody()

        <hr />
        <footer class="bg-dark">
            &copy; 2019 - PortalX
        </footer>

    </div>
    

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/popper.js/dist/popper.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>