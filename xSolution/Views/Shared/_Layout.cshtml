<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - PortalX</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="stylesheet" type="text/css" media="screen" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/lib/designX.css">
    
    @RenderSection("Styles", required: false)

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light"> <!-- make it sticky-top -->
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="~/img/portalX-brand-logo.png" width="160px" height="40px" alt="PortalX-Logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" 
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
				<div class="navbar-nav ml-3 mr-auto">
                    <a class="nav-item nav-link" href="#">Explore</a>
                    <a class="nav-item nav-link" href="#">About Us</a>    
            	</div>
                <div class="navbar-nav float-right">
                    <a class="nav-item nav-link mr-5" href="#">Log In</a>
                    <a class="nav-item btn btn-primary" href="#" role="button">Get Started</a>
                </div>
                
            </div>          
        </div>   
    </nav>

    @RenderBody()

    <hr />

    <div class="container-fluid">    
        
        <footer class="ml-3">
        
            <div class="row">
                <div class="col-lg-4">
                    <h5>PortalX</h5>
                    <h6>Learning X demystified!</h6>
                    &copy; 2019 - PortalX
                
                </div>
                <div class="col-lg-4">
                    <h6>Contact Us</h6>
                    <nav class="nav flex-column">
                    <a class="nav-link nav-item" href="#">Home</a>
                    <a class="nav-link nav-item" href="#">Log In</a>
                    <a class="nav-link nav-item" href="#">Request Info</a>
                    <a class="nav-link nav-item" href="#">Terms and Privacy</a>
                    </nav>
                
                </div>
                <div class="col-lg-4">
                    <h6>Sign Up for TestMag</h6>
                    <p>Sign up for our fortnightly newsletter. No Spam Ever! </p>
                
                </div>
            </div>
        
        </footer>
    
    </div>
    

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/popper.js/dist/popper.js"></script>
    <script src="~/lib/magix.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>